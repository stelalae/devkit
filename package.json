{
  "name": "devkit",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prepare",
    "bootstrap": "lerna bootstrap",
    "fmt": "npx prettier --write @querycap/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "tsc --incremental --diagnostics && lerna exec -- ts-node ../../rollup.config.ts",
    "prepare": "npm run bootstrap && npm test && npm run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/runtime": "7.8.3",
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@reactorx/core": "0.19.x",
    "@reactorx/request": "0.19.x",
    "@reactorx/router": "0.19.x",
    "@testing-library/react": "9.4.x",
    "@types/jest": "24.0.x",
    "@types/localforage": "0.0.x",
    "@types/lodash": "4.14.x",
    "@types/node": "13.1.x",
    "@types/react": "16.9.x",
    "@types/react-dom": "16.9.x",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "acorn": "7.1.x",
    "acorn-dynamic-import": "4.0.x",
    "axios": "0.19.x",
    "babel-jest": "24.9.x",
    "chalk": "3.0.0",
    "date-fns": "2.9.0",
    "eslint": "6.8.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "history": "4.10.1",
    "husky": "4.0.7",
    "jest": "24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "9.5.0",
    "localforage": "1.7.3",
    "localforage-memoryStorageDriver": "0.9.2",
    "lodash": "4.17.15",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "rollup": "1.29.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-dts": "1.2.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rxjs": "6.5.4",
    "ts-node": "8.6.2",
    "typescript": "3.7.4",
    "uuid": "3.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix",
      "git add"
    ],
    "*.{json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "^@querycap/([^/]+)$": "<rootDir>/@querycap/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna bootstrap",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}

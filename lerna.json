{
  "packages": [
    "@querycap/*"
  ],
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true,
      "allowBranch": "master",
      "message": "chore(release): %s"
    }
  },
  "version": "independent"
}
